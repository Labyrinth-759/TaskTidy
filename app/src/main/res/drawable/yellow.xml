<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hover state -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF280" />
            <corners android:radius="20dp" /> <!-- Adjust roundness here -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FBF4B0" />
            <corners android:radius="100dp" /> <!-- Adjust roundness here -->
            <stroke
                android:width="1dp"
                android:color="#000" /> <!-- White border -->
        </shape>
    </item>
</selector>